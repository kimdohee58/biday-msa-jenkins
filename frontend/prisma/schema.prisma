generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL_MongoDB")
}

model Image {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  originalName String
  uploadName   String
  uploadPath   String
  uploadUrl    String
  type         String
  referencedId  String
  createdAt    DateTime @default(now())

  @@map("images")
}
